{
  "manifest_version": 3,
  "name": "Bitcare Photo Downloader",
  "version": "1.0",
  "description": "Loads and downloads all photos from Bitcare with customizable options.",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://app.bitcare.com/contacts/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Bitcare Photo Downloader"
  }
}