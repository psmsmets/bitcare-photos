{
  "manifest_version": 3,
  "name": "Bitcare Photo Downloader",
  "version": "0.1.5",
  "description": "Download alle foto's van de Bitcare fotopagina van je kind(eren), overzichtelijk en automatisch.",
  "action": {
    "default_title": "Bitcare Photo Downloader",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://app.bitcare.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.bitcare.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "homepage_url": "https://github.com/psmsmets/bitcare-photos/",
  "author": "psmsmets"
}
